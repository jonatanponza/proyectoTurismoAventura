<div class="container" style="margin: 100px 10px;">
    <div class="col-4 offset-md-4">
        <div class="row">
            <h2>Modificar entrada:</h2>
        </div>
        <div style="margin-top: 50px;">
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <div class="row g-3 mb-4">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Nombre del viaje" aria-label=""
                            name="titulo" value="{{novedad.titulo}}">
                    </div>
                </div>
                <div class="row g-3 mb-4">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Precio" aria-label="" name="precio"
                            value="{{novedad.precio}}">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Fecha" aria-label="" name="fecha"
                            value="{{novedad.fecha}}">
                    </div>
                </div>
                <div class="row container mb-5" style="margin-top: 25px;">
                    <div class="col">
                        <textarea name="cuerpo" id="" cols="55" rows="10"
                            placeholder="Agregar descripción">{{novedad.cuerpo}}</textarea>
                    </div>
                </div>
                <div class="row container mb-4">
                    <p>
                        <label for="">Cambiar imagen:
                            <input type="file" name="imagen" id="imagen">
                        </label>
                    </p>
                    <p>
                        <label for=""><input type="checkbox" name="img_borrar" id="img_borrar" value="1">
                            ¡Quitar imagen actual!
                        </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </div>
            </form>
            {{#if error}}
            <p class="text-danger">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>