<!-- Contenido del sitio -->
<!-- abre hero -->
<div class="container-fluid">
    <div id="home" class="row align-items-center hero scroll_selection">
        <div class="col-lg-4 offset-lg-4">
            <h1>Turismo Aventura</h1>
            <h3>Elegi unas vacaciones diferentes.</h3>
        </div>
    </div>
    <!-- cierra hero -->
    <div id="noticias" class="row py-5 scroll_selection">
        <!-- abre novedades -->
        <div class="list-group col-lg-3 offset-lg-1">
            <h3><i class="bi-compass"> Nuestras Actividades:</i></h3>
            {{#each novedades}}
            <button type="button" class="list-group-item list-group-item-action" data-bs-toggle="modal"
                data-bs-target="#novedadModal{{id}}"><img src="{{imagen}}" width="70"> {{titulo}}</button>
            {{/each}}
        </div>
        <!-- cierra novedades -->
        <!-- abre carousel -->
        <div id="carousel" class="col-lg-5 offset-lg-1 scroll_selection">
            <h3><i class="bi-chat-right-text"> Testimonios:</i></h3>
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/carousel1.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block align-items-top">
                            <h4>"Muy bueno. Hay Actividades para toda la familia"</h4>
                            <p>Roberto, Capital Federal</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel2.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h4>"Hermosa experiencia y una vacaciones diferentes"</h4>
                            <p>Isabel, Salta</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel3.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h4>"Espectacular!! Muy divertido para hacer con amigos"</h4>
                            <p>Sofia, Neuquen</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!-- cierra carousel -->
    </div>
    <!-- abre modal -->
    {{#each novedades}}
    <div class="modal" tabindex="-1" id="novedadModal{{id}}">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{titulo}}</h4>
                </div>
                <div class="modal-body">
                    <img src="{{imagen}}" class="container-fluid">
                    <p>{{cuerpo}}</p>
                    <p>Fecha de actividad: {{fecha}}</p>
                    <p>Precio: {{precio}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Seguir Mirando</button>
                    {{!-- <button type="button" class="btn btn-primary">Inscribirse</button> --}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <!-- cierra modal -->
    <!-- abre seccion historia -->
    <div id="historia" class="scroll_selection">
        <h2 style="padding-left: 10px;"><i class="bi-people-fill"> Sobre Nosotros</i></h2>
        <div class="col-12">
            <p class="nosotros" style="padding-left: 10px;">Somos una empresa dedicada a brindarte unas vacaciones
                diferentes enmarcadas
                en la naturaleza y el deporte aventura. Con actividades personalizadas para cada tipo de grupo ya sean
                familar o de amigos. Nuestro equipo se compone de guias especializados y en constante formaci√≥n.</p>
        </div>
        <div class="row justify-content-evenly">
            <div class="col-4">
                <img src="/images/historia_raffting.jpg" alt="raffting">
            </div>
            <div class="col-4">
                <img src="/images/historia_tirolesa.jpg" alt="tirolesa">
            </div>
        </div>
    </div>
    <!-- cierra seccion historia -->
    <!-- abre seccion staff -->
    <div id="staff" class="py-5 col-lg-6 offset-lg-3 scroll_selection">
        <h2><i class="bi-person-vcard"> Staff</i></h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <img src="/images/card_staff1.jpg" class="card-img-top" alt="staff1">
                    <div class="card-body">
                        <h3 class="card-title">Ramiro Gonzalez</h3>
                        <p class="card-text">Guia en cicloturismo y cabalgatas.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="/images/card_staff2.jpg" class="card-img-top" alt="staff2">
                    <div class="card-body">
                        <h3 class="card-title">Santiago Scalp</h3>
                        <p class="card-text">Guia especialista en kayak y raffting. Ademas le apacionan todos los
                            deportes de acuaticos.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="/images/card_staff3.jpg" class="card-img-top" alt="staff3">
                    <div class="card-body">
                        <h3 class="card-title">Maria Laura Hiss</h3>
                        <p class="card-text">Escaladora. Es especialista en actividades de cuerda.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- cierra seccion staff -->
    <!-- abre conocenos -->
    <!-- abre mapa -->
    <div id="conocenos" class="row py-5 scroll_selection">
        <div class="col-md-4 offset-md-2">
            <h3><i class="bi-map"> Donde estamos</i></h3>
            <div id="mapa">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d878.750173118849!2d-58.49381432139926!3d-34.505163684007385!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb116d379918f%3A0xd94a220e94552393!2sAv.%20Maip%C3%BA%203320%2C%20La%20Lucila%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1674236820460!5m2!1ses!2sar">
                </iframe>
            </div>
        </div>
        <!-- cierra mapa -->
        <!-- abre form contacto -->
        <div class="col-md-4 offset-md-1">
            <form action="/" method="post" class="row g-3">
                <h3><i class="bi-envelope-at"> Contactanos</i></h3>
                <div class="col-md-6">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>
                <div class="col-md-6">
                    <label for="Apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido">
                </div>
                <div class="col-6">
                    <label for="tel" class="form-label">Telefono</label>
                    <input type="text" class="form-control" id="telefono" name="tel">
                </div>
                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="ejemplo@gmail.com"
                        name="email">
                </div>
                <div class="col-12">
                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea class="form-control" id="mensaje" rows="3" name="mensaje"></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-outline-light"
                        onclick="return confirm('Revise sus datos y confirme con Aceptar para terminar')">Enviar</button>
                </div>
            </form>
            <div class="mt-3">
                <p>{{message}}</p>
            </div>
        </div>
        <!-- cierra form contacto -->
    </div>
    <!-- cierra conocenos -->
</div>
<!-- Fin contenido -->